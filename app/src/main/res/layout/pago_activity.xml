<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        >


        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalle de Pago"
            android:textStyle="bold"
            android:textSize="35dp"
            android:layout_marginBottom="40dp"
            />
        <TextView
            android:id="@+id/txtDetalleFrijol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frijoles con elote"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_below="@id/textView8"
            />

        <TextView
            android:id="@+id/txtTotalFrijol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView8"
            android:layout_marginStart="60dp"
            android:layout_toRightOf="@id/txtDetalleFrijol"
            android:text="hola"
            android:textSize="25dp"
            android:textStyle="bold" />
        <View
            android:id="@+id/view1"
            android:layout_below="@id/txtDetalleFrijol"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/txtDetalleFrijolElote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frijoles Sin elote"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_below="@id/view1"
            />
        <TextView
            android:id="@+id/txtTotalFrijolElote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:text="hola"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_below="@id/view1"
            android:layout_toRightOf="@id/txtDetalleFrijolElote"
            />
        <View
            android:id="@+id/view2"
            android:layout_below="@id/txtDetalleFrijolElote"
            android:layout_width="match_parent"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/txtTotalDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view2"
            android:layout_marginStart="40dp"
            android:text="TOTAL"
            android:textSize="35dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="hola"
            android:textStyle="bold"
            android:textSize="35dp"
            android:layout_below="@id/view2"
            android:layout_toRightOf="@id/txtDetalleFrijolElote"
            />
        <Button
            android:id="@+id/btnPago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Ejecutar pago"
            android:textSize="20dp"
            android:background="@drawable/rounded_rectangle"
            android:textColor="@color/cardview_light_background"
            android:layout_below="@id/txtTotal"
            />
    </RelativeLayout>
</LinearLayout>